{
  "openapi": "3.1.0",
  "info": {
    "title": "Virtual Accounts API",
    "description": "Use this endpoint to generate a new, unique virtual bank account number for a customer or business entity.",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://dev-gateman.v3.connectramp.com/api/virtual-accounts"
    }
  ],
  "security": [
    {
      "apiKey": []
    }
  ],
  "paths": {
    "virtual-accounts/create": {
      "post": {
        "description": "Creates a new virtual bank account for a customer or business entity",
        "requestBody": {
          "description": "Virtual account creation details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VirtualAccountRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Virtual account created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VirtualAccountResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "virtual-accounts/generate-wallet": {
      "post": {
        "description": "Generates one or more virtual account numbers associated with the provided customer details.",
        "requestBody": {
          "description": "Virtual account generation details",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenerateAccountRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Action was successfull",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenerateAccountResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/subaccounts": {
      "get": {
        "description": "Returns list of all subaccounts currently associated with your primary Cray Finance account",
        "responses": {
          "200": {
            "description": "Subaccount list retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubAccountResponse"
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "VirtualAccountRequest": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/CorporateAccountRequest"
          },
          {
            "$ref": "#/components/schemas/IndividualAccountRequest"
          }
        ],
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "Corporate": "#/components/schemas/CorporateAccountRequest",
            "Individual": "#/components/schemas/IndividualAccountRequest"
          }
        }
      },
      "BaseAccountRequest": {
        "type": "object",
        "required": [
          "bvn",
          "type",
          "nin",
          "virtual_account_type",
          "account_name",
          "currency",
          "reference",
          "customer_email",
          "provider"
        ],
        "properties": {
          "bvn": {
            "description": "Bank Verification Number (must be exactly 11 digits)",
            "type": "string",
            "pattern": "^[0-9]{11}$",
            "example": "22192474887"
          },
          "type": {
            "description": "Type of account holder",
            "type": "string",
            "enum": ["Corporate", "Individual"]
          },
          "nin": {
            "description": "National Identification Number",
            "type": "string",
            "example": "11111122221"
          },
          "virtual_account_type": {
            "description": "Type of virtual account",
            "type": "string",
            "enum": ["Permanent", "Temporary"],
            "example": "Permanent"
          },
          "account_name": {
            "description": "Name for the virtual account",
            "type": "string",
            "example": "BOlaOla"
          },
          "currency": {
            "description": "Currency code",
            "type": "string",
            "enum": ["NGN"],
            "example": "NGN"
          },
          "reference": {
            "description": "Unique reference for the transaction",
            "type": "string",
            "format": "uuid",
            "example": "cbf0d060-1544-4a53-a00b-7cb75a3eb59d"
          },
          "customer_email": {
            "description": "Customer's email address",
            "type": "string",
            "format": "email",
            "example": "hello@gmail.com"
          },
          "provider": {
            "description": "Virtual account provider",
            "type": "string",
            "enum": ["monnify", "WEMA"],
            "example": "monnify"
          }
        }
      },
      "CorporateAccountRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseAccountRequest"
          },
          {
            "type": "object",
            "required": ["rc_number"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["Corporate"],
                "example": "Corporate"
              },
              "rc_number": {
                "description": "Registration Certificate number (required for Corporate accounts)",
                "type": "string",
                "example": "99988828822"
              }
            }
          }
        ]
      },
      "IndividualAccountRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseAccountRequest"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["Individual"],
                "example": "Individual"
              }
            }
          }
        ]
      },
      "VirtualAccountResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Action was Successful"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BankAccount"
            }
          }
        }
      },
      "BankAccount": {
        "type": "object",
        "properties": {
          "bankCode": {
            "description": "Bank code identifier",
            "type": "string",
            "example": "035"
          },
          "bankName": {
            "description": "Name of the bank",
            "type": "string",
            "example": "Wema bank"
          },
          "accountNumber": {
            "description": "Generated virtual account number",
            "type": "string",
            "example": "4114669663"
          },
          "accountName": {
            "description": "Account holder name",
            "type": "string",
            "example": "BOl"
          }
        }
      },
      "SubAccountResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "SubAccount Details"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SubAccount"
            }
          }
        }
      },
      "SubAccount": {
        "type": "object",
        "properties": {
          "uuid": {
            "description": "Unique identifier for the subaccount",
            "type": "string",
            "example": "9999999999"
          },
          "company_name": {
            "description": "Name of the company",
            "type": "string",
            "example": "test"
          },
          "company_email": {
            "description": "Company email address",
            "type": "string",
            "format": "email",
            "example": "test@gmail.com"
          }
        }
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name": "api-key",
        "in": "header"
      }
    }
  }
}